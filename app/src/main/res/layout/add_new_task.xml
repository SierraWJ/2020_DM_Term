<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">
    <EditText android:id="@+id/task_title"
              android:hint="작업이름"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:singleLine="true">
    </EditText>

    <NumberPicker android:id="@+id/numberPicker"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/add_confirm" android:layout_weight="1"
                android:layout_margin="5dp"/>
        <Button
                android:text="cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/add_cancel" android:layout_weight="1"
                android:layout_margin="5dp"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">
    <ScrollView
            android:layout_height="match_parent" android:layout_weight="4" android:layout_width="match_parent"
            android:padding="5dp">
        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/time_table">

                <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" android:id="@+id/blank"
                        android:background="@android:color/white"/>
                <TextView
                        android:text="일"
                        android:id="@+id/sun" android:layout_weight="1"
                        android:gravity="center" android:layout_width="100dp"
                        android:layout_height="wrap_content" android:layout_toRightOf="@id/blank"
                        android:background="@android:color/white" android:layout_marginLeft="1dp"/>
                <TextView
                        android:text="월"
                        android:id="@+id/mon" android:layout_weight="1"
                        android:gravity="center" android:layout_width="100dp"
                        android:layout_height="wrap_content" android:layout_toRightOf="@id/sun"
                        android:background="@android:color/white" android:layout_marginLeft="1dp"/>
                <TextView
                        android:text="화"
                        android:layout_height="wrap_content" android:id="@+id/tue" android:layout_weight="1"
                        android:gravity="center" android:layout_width="100dp" android:layout_toRightOf="@id/mon"
                        android:background="@android:color/white" android:layout_marginLeft="1dp"/>
                <TextView
                        android:text="수"
                        android:layout_height="wrap_content" android:id="@+id/wed" android:layout_weight="1"
                        android:gravity="center" android:layout_width="100dp" android:layout_toRightOf="@id/tue"
                        android:background="@android:color/white" android:layout_marginLeft="1dp"/>
                <TextView
                        android:text="목"
                        android:layout_height="wrap_content" android:id="@+id/thu" android:layout_weight="1"
                        android:gravity="center" android:layout_width="100dp" android:layout_toRightOf="@id/wed"
                        android:background="@android:color/white" android:layout_marginLeft="1dp"/>
                <TextView
                        android:text="금"
                        android:layout_height="wrap_content" android:id="@+id/fri" android:layout_weight="1"
                        android:gravity="center" android:layout_width="100dp" android:layout_toRightOf="@id/thu"
                        android:background="@android:color/white" android:layout_marginLeft="1dp"/>
                <TextView
                        android:text="토"
                        android:layout_height="wrap_content" android:id="@+id/sat" android:layout_weight="1"
                        android:gravity="center" android:layout_width="100dp" android:layout_toRightOf="@id/fri"
                        android:background="@android:color/white" android:layout_marginLeft="1dp"/>
            </RelativeLayout>
        </HorizontalScrollView>
    </ScrollView>
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="7"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:id="@+id/task_layout"
                      android:gravity="center" android:padding="5dp">
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/addButton"
                    android:src="@drawable/add_icon"
                    android:onClick="addBtnOnClick"/>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="8.5" android:gravity="center">
        <Button
                android:text="@string/confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/week_confirm" android:layout_weight="1"
                android:layout_margin="5dp"/>
        <Button
                android:text="@string/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/week_cancel" android:layout_weight="1"
                android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp"/>
    </LinearLayout>
</LinearLayout>